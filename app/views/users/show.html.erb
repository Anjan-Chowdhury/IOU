<h2>Hi <%= @user.name %>!</h2>

<h3>Dashboard</h3>
<h3>Bills</h3>

<% if @bills.empty? %>
  <p>You have no bills.</p>
<% else %>
	<% @bills.each do |bill| %>
		<ul>
		<li><%= link_to "Bill ##{bill.id}", bill_url(bill) %></li>
		</ul>
	<% end %>
<% end %>

<h3>Payments</h3>
<% if @payments.empty? %>
	<p>You have no payments.</p>
<% else %>
	<% @payments.each do |payment| %>
		<ul>
		<li> <%= link_to "Payment ##{payment.id}", debt_url(payment) %></li>
		</ul>
	<% end %>
<% end %>

<br>
<%= link_to "Return to Index Page", root_url %>
<br>
<br>
<% if logged_in? %>
	<%= button_to "Log out", session_url, :method => "delete", class: "btn btn-danger" %>
<% end %>